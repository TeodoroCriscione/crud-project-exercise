{% extends 'base.html.twig' %}
{% block title %}Recipe index{% endblock %}
{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4 display-5 fw-bold">&#127837; Welcome to Nonna's Recipes</h1>
    <div class="text-center mb-4">
        <a class="btn btn-success btn-lg rounded-pill px-4 shadow-sm" href="{{ path('app_recipe_new') }}">
            &#10133; Create New Recipe
        </a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        {% for recipe in recipes %}
            <div class="col">
                <div class="card h-100 shadow rounded-4 overflow-hidden">
                    {% if recipe.imageURL %}
                        <img src="{{ recipe.imageURL }}" class="card-img-top object-fit-cover" style="height: 200px;" alt="Image of {{ recipe.title }}">
                    {% else %}
                        <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top object-fit-cover" style="height: 200px;" alt="No image available">
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">{{ recipe.title }}</h5>
                        <p class="card-text small text-muted mb-2"><strong>Ingredients:</strong> {{ recipe.ingredients|slice(0, 80) ~ '...' }}</p>
                        <p class="card-text small"><strong>Instructions:</strong> {{ recipe.instructions|slice(0, 100) ~ '...' }}</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a class="btn btn-outline-primary btn-sm rounded-pill" href="{{ path('app_recipe_show', {'id': recipe.id}) }}">&#128374; Show</a>
                            <a class="btn btn-outline-warning btn-sm rounded-pill" href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">&#128394; Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    No recipes found. Be the first to add one!
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
