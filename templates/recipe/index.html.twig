{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="d-flex justify-content-center">Welcome to Nonna's Recipes</h1>
        <h1 class="my-5">Recipe index</h1>
        <a class="btn btn-success my-5" href="{{ path('app_recipe_new') }}">Create new</a>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            {% for recipe in recipes %}
            <div>
                <div class="card my-5" style="width: 18rem;">
                        <div class="card-body">
                        <h5 class="card-title">{{ recipe.title }}</h5>
                        <img src={{recipe.imageURL}} class="card-img-top" alt="image recipe">
                        <p class="card-text">{{ recipe.ingredients }}</p>
                        <p class="card-text">{{ recipe.instructions }}</p>

                        <div class="d-flex justify-content-around ">
                            <a class="btn btn-primary" href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                            <a class="btn btn-warning" href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <p>No recipe found.</p>
            {% endfor %}
        </div>
    </div>

    
{% endblock %}
